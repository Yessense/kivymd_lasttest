ScreenManager:
    SplashScreen:
        id: splashscreen
        name: 'SplashScreen'
    Screen:
        id: recview
        name: 'RecycleScreen'
    Screen:
        id: tabscreen
        name: 'TabScreen'
        BoxLayout:
            id: boxtabs
            orientation: "vertical"


<Tab>:
    id: tab
    text:
    desc: ''
    path: ''
    BoxLayout:
        id: box
        AnchorLayout:
            id: anchor
        MDLabel:
            id: label
            halign: "left"
            text: tab.text + tab.desc
            pos_hint: {"center_x": .5, "center_y": .5}




